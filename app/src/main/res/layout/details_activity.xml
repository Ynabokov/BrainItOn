<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="45sp"
        android:text="No tasks yet"
        android:gravity="center"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/due_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due on:"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:textSize="23sp"
        android:layout_marginTop="30sp"/>

    <TextView
        android:id="@+id/added_on"
        android:layout_width="96sp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="20sp"
        android:text="Added on:"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/days_to_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Days to complete:"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"
        android:textSize="17sp"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="168sp"
        android:ems="10"
        android:layout_marginRight="20sp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:textSize="17sp"
        android:visibility="invisible"/><![CDATA[
    />

]]>
</LinearLayout>