<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicWhite"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/pictureContainer"
        android:layout_width="370dp"
        android:layout_height="320dp"
        android:background="@mipmap/face"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/mainList"
        android:layout_width="357dp"
        android:layout_height="179dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="160dp"
        app:layout_constraintBottom_toTopOf="@+id/pictureContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/allTasksButton"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="32dp"
        android:text="@string/button_all_tasks"
        app:layout_constraintBottom_toTopOf="@+id/pictureContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainList"
        app:layout_constraintVertical_bias="0.231" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/complete_task"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="setBrainSize" />


    <ImageView
        android:id="@+id/brain"
        android:layout_width="40pt"
        android:layout_height="115pt"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="@+id/pictureContainer"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/pictureContainer"
        app:layout_constraintTop_toBottomOf="@+id/allTasksButton"
        app:srcCompat="@mipmap/brain"
        tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>


